spring:
  application:
    name: quickurl
  docker.compose.lifecycle-management: start_only
  datasource:
    driver-class-name: org.mariadb.jdbc.Driver
    url: ${SPRING_DATASOURCE_URL:jdbc:mariadb://mariadb:3306/mydatabase}
    username: ${SPRING_DATASOURCE_USERNAME:myuser}
    password: ${SPRING_DATASOURCE_PASSWORD:secret}
  jpa:
    hibernate:
      ddl-auto: update
    show-sql: false
    database-platform: org.hibernate.dialect.MariaDBDialect
    properties:
      hibernate:
        format_sql: true
        use_sql_comments: true
  data:
    redis:
      host: ${SPRING_DATA_REDIS_HOST:redis}
      port: ${SPRING_DATA_REDIS_PORT:6379}
      password: ${SPRING_DATA_REDIS_PASSWORD:}
      timeout: 2000ms
  cache:
    type: redis
    redis:
      time-to-live: 60000  # 60초
      cache-null-values: false
    cache-names:
      - urlCache

logging:
  level:
    dev.haisia.quickurl: INFO
    org.springframework.scheduling: INFO
    org.hibernate.SQL: WARN
    org.hibernate.type.descriptor.sql.BasicBinder: WARN

# Rate Limit 설정
rate-limit:
  enabled: true
  request-limit: 10  # 기간당 최대 요청 수
  refill-duration-seconds: 1  # 리필 기간 (초)
  excluded-paths:
    - /favicon.ico
    - /actuator
    - /error

jwt:
  secret: ${JWT_SECRET}
  access-token:
    validity-second: 3600
  refresh-token:
    validity-second: 86400

# Cookie 설정
app:
  cookie:
    secure: true  # HTTPS만 허용
    domain: quickurl.haisia.dev  # 서브도메인 공유
    same-site: Strict
    access-token-max-age: 3600      # 1시간
    refresh-token-max-age: 604800   # 7일

brevo:
  api-key: ${SMTP_BREVO_API_KEY}
  api-base-url: ${SMTP_BREVO_BASE_URL}
